<div class="row">
    <div class="col-8">
        <h2 class="ms-3">Some available supplement facts foods</h2>
        <table id="cartContent" border="1" cellpadding="10" cellspacing="10"
            style="border-collapse: collapse; margin: auto; height: 600px; width: 960px; overflow-y: scroll; display: block; ">
            <tr style="border: none;">
                <td style="border: none;">(Trá»‘ng)</td>
            </tr>
        </table>

    </div>
    <div class="col-4">
        <div class="mb-3">
            <h3 class="m-0 mb-1">Payment menthod</h3>
            <div class="form-check">
                <input class="form-check-input" type="radio" name="paymentMenthod" value="byCash" id="flexRadioDefault1"
                    checked>
                <label class="form-check-label" for="flexRadioDefault1">
                    Payment in cash
                </label>
            </div>
            <div class="form-check">
                <input class="form-check-input" type="radio" name="paymentMenthod" value="byMomo"
                    id="flexRadioDefault2">
                <label class="form-check-label" for="flexRadioDefault2">
                    Momo
                </label>
            </div>
            <div class="form-check">
                <input class="form-check-input" type="radio" name="paymentMenthod" value="byZaloPay"
                    id="flexRadioDefault3">
                <label class="form-check-label" for="flexRadioDefault3">
                    Zalo pay
                </label>
            </div>
        </div>

        <div class="mb-3">
            <h3 class="m-0 mb-1">Fullname</h3>
            <div class="mb-3">
                <input type="text" class="form-control" id="fullname" value="" placeholder="fullname">
            </div>
        </div>

        <div class="mb-3">
            <h3 class="m-0 mb-1">Delivery address</h3>
            <div class="mb-3">
                <input type="email" class="form-control" id="deliveryAddress" value="" placeholder="address">
            </div>
        </div>

        <div class="mb-3">
            <h3 class="m-0 mb-1">Phone number</h3>
            <div class="mb-3">
                <input type="text" class="form-control" id="phoneNumber" placeholder="phone number">
            </div>
        </div>

        <div class="mb-3">
            <h3 class="m-0 mb-1">Total: </h3>
            <span id="total_area">$0.00</span>
        </div>

        <div class="mt-3">
            <button type="button" class="btn btn-primary" data-bs-toggle="modal"
                data-bs-target="#confirmModal">Order</button>
        </div>
    </div>
</div>

<div class="modal fade" id="confirmModal">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-body">
                Confirm order
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button id="btn_order" type="button" class="btn btn-primary">Confirm</button>
            </div>
        </div>
    </div>
</div>