            {{#each products}}
            <div class="col-3 mb-4">
                <div class="card" style="width: 18rem;">
                    <img src="{{productImage}}" class="card-img-top" alt="...">
                    <div class="card-body">
                        <h5 class="card-title">{{productName}}</h5>
                        <p class="card-text">{{price}} VNƒê</p>
                        <p class="card-text">{{quantity}} {{unit}}</p>
                        <a href="#" data-image="{{productImage}}" data-id="{{productID}}" data-price="{{price}}" data-name="{{productName}}" data-quantity="{{quantity}}" class="btn btn-primary click-to-buy-now">Buy now</a>
                    </div>
                </div>
